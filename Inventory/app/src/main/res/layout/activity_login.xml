<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.login.LoginActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvLoginAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/iniciar_sesion"
        android:textSize="@dimen/title40sp"
        android:layout_marginBottom="@dimen/space20sp"/>

    <TextView
        android:id="@+id/tvLoginUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/usuario_correo"
        android:textSize="@dimen/normalSize17sp"/>

    <EditText
        android:id="@+id/edLoginUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/usuario_correo"
        android:inputType="textPersonName"
        android:layout_marginBottom="@dimen/space20sp" />

    <TextView
        android:id="@+id/tvLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contrasenia"
        android:textSize="@dimen/normalSize17sp"/>

    <EditText
        android:id="@+id/edLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/contrasenia"
        android:inputType="textPassword"
        android:layout_marginBottom="@dimen/space20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/space20sp">

        <Switch
            android:id="@+id/swLoginRemember"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/recuerdame"
            android:layout_weight="1"
            android:textSize="@dimen/normalSize17sp"/>

        <Button
            android:id="@+id/btnLoginRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/registrarse"
            android:textSize="@dimen/normalSize17sp"
            style="@style/TransparentButton"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnLoginLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/iniciar_sesion"
        android:textSize="@dimen/normalSize17sp"/>

    <Button
        android:id="@+id/btnLoginTelegram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/iniciar_con_telegram"
        android:textSize="@dimen/normalSize17sp"
        android:background="#0088cc"/>

</LinearLayout>